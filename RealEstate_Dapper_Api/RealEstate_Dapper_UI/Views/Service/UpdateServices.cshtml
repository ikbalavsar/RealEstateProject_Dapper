@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateServices";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Hizmetlerimiz Alanı için İçerik Güncelleme Sayfası</h6>
                <form method="post">
                    <input type="hidden" asp-for="ServiceID" />
                    <label>Hizmet Başlığı</label>
                    <input type="text" asp-for="ServiceName" class="form-control" />
                    <br />

                    <label>Hizmet Durumu</label>
                    <input type="text" asp-for="ServiceStatus" class="form-control" />
                    <br />


                    <button class="btn btn-success">İçeriği Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>


